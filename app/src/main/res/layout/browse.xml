<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/image_thumb"
        android:id="@+id/image_thumb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/app_name"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/image_thumb"
        android:text="@string/application_name"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_category"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/app_name"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/image_thumb"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/app_category"
        android:textAlignment="center" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/app_summary"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/app_category"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@+id/image_thumb"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:text="@string/app_summary"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>